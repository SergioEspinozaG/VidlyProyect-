@model Vidly.ViewModels.RandomMovieViewModel

@{
    Layout = null;
}

@*<h2>@Model.Name</h2>*@


@if (Model.Customers.Count == 0)
{
    <p>No one has rented this movie before </p>
}
else
{
    <p> This movie has been rented for : </p>
    <ul>
        @foreach (var movies in Model.Movies)
        {
            <li>@movies.Name</li>
        }
    </ul>
}
