@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
}

@{ 
    var className = Model.Customers.Count > 1 ? "popular" : null;

}

<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Movies</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model.Movies)
    {
        <tr>
            <td>@movie.Name</td>
        </tr>
    }
    </tbody>
</table>