@model IEnumerable<Vidly.Models.Movie>

    ViewBag.Title = "Random";
}

@{
    var className = Model.Count() > 1 ? "popular" : null;

}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movies</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
            </tr>
        }
    </tbody>
</table>